<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- the circular icon on the left -->
    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/container_user_infos"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="24dp"
        android:padding="4dp">
        <mobile.a3tech.com.a3tech.view.CircleImageView
            android:id="@+id/user_resp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/a3tech_logo_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resp_name"
            android:textSize="11dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/user_resp"
            android:layout_centerHorizontal="true"
            android:text="user"
            android:layout_marginTop="4dp"
            />
    </RelativeLayout>


    <!-- the blue line -->

    <RelativeLayout
        android:id="@+id/item_line"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <!-- the semi transparent circle on the line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/semi_transparent" />

        <View
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:background="@drawable/a3tech_back_circular_colored_layout" />

    </RelativeLayout>

    <!-- views at the right of the blue line -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="22dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/item_title_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-meduim"
            android:singleLine="true"
            android:text="titre evenement"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_time_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="a3tech a3tech"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/item_subtitle_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="a3tech a3tech"
            android:textSize="11dp"/>

        <!-- other views -->

    </LinearLayout>
</LinearLayout>