<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fb"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/service_contour"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <mobile.a3tech.com.a3tech.view.CircleImageView
                    android:id="@+id/idPopProfil_circleImaleProfilPicto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/clear"
                    android:src="@drawable/portrait"
                    app:border_color="@color/light"
                    app:border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/idPopProfil_textViewPseudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <RatingBar
                        android:id="@+id/idPropProfil_ratinBarEval"
                        style="@style/RatingBarSmallEdu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="2.0"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/idPopProfil_textViewMembreDepuis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:text="@string/txtDetailSrvc_textViewService"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/idPopProfil_textViewNbrPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/idPopProfil_textViewelementsConfianceUser"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:text="@string/txtPopProfil_textViewelementsConfianceUser"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/gray_phone" />

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewPhoneCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/red_uncheck" />

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/gray_mail" />

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewEmailCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/red_uncheck" />

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewFacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/gray_facebook" />

                        <ImageView
                            android:id="@+id/idPopProfil_imageviewFacebookCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:contentDescription="@string/app_name"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:src="@drawable/red_uncheck" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/idSettings_ViewLangueTitle"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/DarkGray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>