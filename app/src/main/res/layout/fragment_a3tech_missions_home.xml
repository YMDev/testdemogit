<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.A3techMissionsHomeFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_missions"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/design_fab_image_size"
        android:layout_height="@dimen/design_fab_image_size"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_add_action_3tech"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        />


</FrameLayout>