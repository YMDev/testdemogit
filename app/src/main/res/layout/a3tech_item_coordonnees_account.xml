<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="8dp"
    app:paddingStart="8dp"
    tools:background="@color/white">

    <TextView
        android:id="@+id/item_simplevh_txttitle"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.87"
        android:textColor="@android:color/black"
        tools:text="Dessert Name"
        android:fontFamily="sans-serif-meduim"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_simplevh_txtdescription"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@+id/item_simplevh_txttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.54"
        android:ellipsize="end"
        android:maxLines="3"
        android:fontFamily="sans-serif-meduim"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        tools:text="A really long description of the dessert, with a maximum three lines." />

    <LinearLayout
        android:id="@+id/layout_actions_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:src="@drawable/a3tech_call" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a3tech_send_sms" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/item_simplevh_txtdescription"
        android:background="@color/gray" />


</RelativeLayout>