<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dip"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/idMenuSearch_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/idMenuSearch_linearLayoutMenuSimple"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/settings_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:contentDescription="@string/app_name"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_search" />

            <TextView
                android:id="@+id/idMenuSearch_textViewMenuSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="Simple Search"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/idSettings_ViewLangueTitle"
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/DarkGray" />

        <LinearLayout
            android:id="@+id/idMenuSearch_linearLayoutMenuAdvanced"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/settings_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:contentDescription="@string/app_name"
                android:gravity="center_vertical"
                android:src="@drawable/advanced_search" />

            <TextView
                android:id="@+id/idMenuSearch_textViewMenuAdvanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="Advanced search"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>