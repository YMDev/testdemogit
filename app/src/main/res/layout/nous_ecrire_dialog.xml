<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/idNousEcrireDialog_textViewMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingBottom="5dp"
        android:paddingLeft="5sp"
        android:text="@string/txtNousEcrireDialog_textViewMessage"
        android:textColor="@color/Gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idNousEcrireDialog_editTextMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/txtNousEcrireDialog_editTextMessage"
        android:inputType="textNoSuggestions|textMultiLine"
        android:lines="3" >
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:weightSum="2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <View
                android:id="@+id/tut1SplitBottom"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/idNousEcrire_linearLayoutAnnuler"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tut1SplitBottom"
                android:layout_weight="1"
                android:background="@drawable/button_item"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:text="@string/txtNousEcrire_textViewAnnuler"
                    android:textColor="@color/branco"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/idNousEcrire_linearLayoutValider"
            android:layout_width="fill_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_item"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="@string/txtNousEcrire_textViewValider"
                android:textColor="@color/branco"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>