<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_fb"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/srvc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/service_contour_gray"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/mission_row_category_picto_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0sp"
                    android:layout_marginRight="3.0sp"
                    android:layout_marginTop="5.0sp"
                    android:background="@drawable/image_bg"
                    android:padding="3.0dip" >

                    <ImageView
                        android:id="@+id/mission_row_profil_picto"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:contentDescription="@string/clear"
                        android:gravity="center"
                        android:src="@drawable/logo_portrait" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/mission_row_service_picto"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/ic_cat_article" />
            </LinearLayout>

            <ImageView
                android:id="@+id/mission_row_arrow_picto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_action_next_item_gray" />

            <LinearLayout
                android:id="@+id/mission_row_infos_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@id/mission_row_arrow_picto"
                android:layout_toRightOf="@id/mission_row_category_picto_ll"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/mission_row_subcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:text="Mathematics:Algebra and Number Theory"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_description_khod"
                        android:textColor="@color/khod"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mission_row_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_description"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_description_Ara"
                        android:textColor="@color/ara"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mission_row_posted_forme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/clear"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/mission_row_posted_by_pseudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_posted_by"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/mission_row_posted_by_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_posted_by"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mission_row_posted_by_nb_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_posted_by"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mission_row_posted_by_nb_moi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:singleLine="true"
                        android:text="@string/txt_mission_row_posted_by"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/mission_row_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0sp"
                android:layout_marginTop="3.0dip"
                android:text="Nouveau"
                android:textColor="@color/DarkGray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/mission_row_sponsorise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="3.0dip"
                android:background="@drawable/ribbon"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Premium"
                    android:textColor="#ffffff"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </RelativeLayout>

        <View
            android:id="@+id/idSettings_ViewLangueTitle"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@color/DarkGray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@color/bg_fc_srv"
            android:gravity="center_vertical" >

            <View
                android:id="@+id/row_service_viewSep"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/DarkGray" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/row_service_viewSep"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/bg_fc_srv"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:src="@drawable/ic_nb_vues" />

                    <TextView
                        android:id="@+id/mission_row_nb_vus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:text="81 vus"
                        android:textColor="@color/text_color_fb"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/row_service_viewSep"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:src="@drawable/ic_nb_alarm" />

                    <TextView
                        android:id="@+id/mission_row_nb_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:text="320 min"
                        android:textColor="@color/red_light"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>