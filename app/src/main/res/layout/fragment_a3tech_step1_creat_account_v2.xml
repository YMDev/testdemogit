<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.A3techStep1CreatAccountFragment">
    <RelativeLayout
        android:id="@+id/container_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_header">

        <TextView
            android:id="@+id/header_select_account_creation_methode"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="6dp"
            android:text="@string/header_create_account"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_btn_create_facebook_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/header_select_account_creation_methode"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/dark_bleu_gray"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/lay_btn_create_facebook_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:clickable="true">

                <Button
                    android:id="@+id/btnfacebookConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawableLeft="@drawable/white_facebook"
                    android:padding="8dp"
                    android:text="@string/facebook_label"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                      />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_btn_create_mail_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_btn_create_facebook_account"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/dark_bleu_gray"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <LinearLayout
                android:id="@+id/lay_btn_create_mail_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:clickable="true">

                <Button
                    android:id="@+id/btn_create_account"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/dark_bleu_gray"
                    android:padding="8dp"
                    android:text="@string/header_create_account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                   />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="38dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/a3tech_terme_of_use_header"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>